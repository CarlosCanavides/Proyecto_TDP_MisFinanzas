<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>
    
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.TabItem" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">14sp</item>
        <item name="tabGravity">center</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="MyProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="colorButtonNormal">#E73019</item>
        <item name="colorControlActivated">#4FEBA2</item>
        <item name="colorControlHighlight">#E73019</item>
        <item name="android:progressDrawable">@drawable/barra_progreso_horizontal_personalizada</item>
        <item name="android:minWidth">200dp</item>
    </style>

    <style name="MyBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@drawable/barra_de_navegacion_selector</item>
        <item name="itemTextColor">@drawable/barra_de_navegacion_selector</item>
        <item name="itemTextAppearanceActive">@style/MyBottomNavigationView.TextAppearance.Active</item>
        <item name="itemTextAppearanceInactive">@style/MyBottomNavigationView.TextAppearance</item>
    </style>

    <style name="MyBottomNavigationView.TextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">8sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="MyBottomNavigationView.TextAppearance.Active" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">9sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

</resources>
