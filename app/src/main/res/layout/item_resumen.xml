<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/resumen_fecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/espacio_mediano"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/espacio_mediano"
                    android:layout_marginEnd="@dimen/espacio_mediano"/>

                <TextView
                    android:id="@+id/resumen_cantidadTransacciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/espacio_mediano"
                    android:layout_marginTop="@dimen/espacio_small"
                    android:layout_marginEnd="@dimen/espacio_mediano"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/espacio_mediano"
                    android:layout_marginTop="@dimen/espacio_small"
                    android:layout_marginEnd="@dimen/espacio_mediano"
                    android:text="@string/resumen_mensajeGasto"/>

                <TextView
                    android:id="@+id/resumen_aviso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/espacio_mediano"
                    android:layout_marginTop="@dimen/espacio_small"
                    android:layout_marginEnd="@dimen/espacio_mediano"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/resumen_grafico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/espacio_mediano"
                android:layout_marginEnd="@dimen/espacio_small"
                android:src="@mipmap/ic_launcher" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>