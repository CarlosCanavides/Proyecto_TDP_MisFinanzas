<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_anti_flash">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true"
        android:background="@color/color_anti_flash">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="360dp"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleTextAppearance="@android:color/transparent"
            android:fitsSystemWindows="true"
            android:background="@drawable/background_dos_colores">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="pin">
            </androidx.appcompat.widget.Toolbar>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:background="@drawable/estilo_fondo_barra_progreso"
                android:layout_marginTop="@dimen/espacio_big"
                android:layout_marginStart="@dimen/espacio_big"
                android:layout_marginEnd="@dimen/espacio_big"
                android:elevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/espacio_small"
                    android:layout_marginStart="@dimen/espacio_mediano"
                    android:layout_marginEnd="@dimen/espacio_mediano"
                    android:layout_gravity="top">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saldo disponible"
                        android:textColor="@color/color_letras_azules"
                        android:textStyle="italic|bold"/>

                </LinearLayout>

                <com.hookedonplay.decoviewlib.DecoView
                    android:id="@+id/progress_bar_circular"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:dv_lineWidth="13dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginBottom="@dimen/espacio_mediano"
                    android:layout_marginStart="@dimen/espacio_mediano"
                    android:layout_marginEnd="@dimen/espacio_mediano"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/tv_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$6.320"
                        android:textSize="30sp"
                        android:textColor="@color/color_letras_azules"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="de un total de"
                        android:textSize="12sp"
                        android:textStyle="italic"
                        android:textColor="@color/colorSecondaryText"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/tv_ingreso_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$7.000"
                        android:textSize="12sp"
                        android:textStyle="italic"
                        android:textColor="@color/colorSecondaryText"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/espacio_mediano"
                    android:layout_marginEnd="@dimen/espacio_mediano"
                    android:layout_marginBottom="45dp"
                    android:layout_gravity="bottom">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textColor="@color/colorDivider"
                        android:textSize="12sp"
                        android:textStyle="italic|bold"
                        android:layout_gravity="left"
                        android:layout_marginStart="52dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100%"
                        android:textSize="12sp"
                        android:textColor="@color/colorDivider"
                        android:textStyle="italic|bold"
                        android:layout_gravity="right"
                        android:layout_marginEnd="48dp"/>

                </FrameLayout>

            </FrameLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/espacio_small"
            android:clipToPadding="false"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_white"
                android:layout_marginTop="@dimen/espacio_small">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="0,1"
                    android:background="@color/color_anti_flash">

                    <TableRow>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/espacio_small"
                            android:layout_marginBottom="@dimen/espacio_small">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icon_flecha_arriva"
                                android:background="@drawable/background_ingreso_promedio"
                                android:paddingBottom="12dp"
                                android:paddingTop="12dp"
                                android:paddingStart="@dimen/espacio_mediano"
                                android:paddingEnd="@dimen/espacio_mediano"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginStart="@dimen/espacio_mediano">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ingreso promedio"
                                    android:textSize="13sp"
                                    android:textStyle="italic|bold"
                                    android:textColor="@color/secondary_text"
                                    android:layout_marginBottom="@dimen/espacio_small"/>

                                <TextView
                                    android:id="@+id/tv_ingreso_promedio"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$2.350"
                                    android:textStyle="bold"
                                    android:textColor="@color/primary_text"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/espacio_small"
                            android:layout_marginBottom="@dimen/espacio_small">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icon_flecha_abajo"
                                android:background="@drawable/background_gasto_promedio"
                                android:paddingBottom="12dp"
                                android:paddingTop="12dp"
                                android:paddingStart="@dimen/espacio_mediano"
                                android:paddingEnd="@dimen/espacio_mediano"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginStart="@dimen/espacio_mediano">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Gasto promedio"
                                    android:textSize="13sp"
                                    android:textStyle="italic|bold"
                                    android:textColor="@color/secondary_text"
                                    android:layout_marginBottom="@dimen/espacio_small"/>

                                <TextView
                                    android:id="@+id/tv_gasto_promedio"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$2.350"
                                    android:textStyle="bold"
                                    android:textColor="@color/primary_text"/>

                            </LinearLayout>

                        </LinearLayout>

                    </TableRow>

                </TableLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transacciones Programadas"
                android:layout_marginStart="@dimen/espacio_mediano"
                android:layout_marginTop="@dimen/espacio_big"
                android:layout_marginBottom="@dimen/espacio_big"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/primary_text">
            </TextView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/espacio_big"
                android:layout_marginEnd="@dimen/espacio_big"
                android:layout_marginTop="@dimen/espacio_small"
                android:layout_marginBottom="@dimen/espacio_mediano"
                app:cardCornerRadius="7dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:id="@+id/panel_ingresos_fijos"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:background="@drawable/selector_item"
                    android:clickable="true">

                    <TextView
                        android:layout_width="@dimen/size_circularview"
                        android:layout_height="@dimen/size_circularview"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/espacio_mediano"
                        android:layout_marginEnd="@dimen/espacio_mediano"
                        android:background="@drawable/textview_circular"
                        android:backgroundTint="@color/color_numeros_naranja"
                        android:text="T"
                        android:textAlignment="center"
                        android:textColor="@color/background_white"
                        android:textSize="@dimen/text_circularview" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginEnd="@dimen/espacio_small"
                        android:divider="@color/primary_light"
                        android:showDividers="middle">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="@dimen/size_contenedor_info"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/espacio_mediano"
                                    android:layout_marginTop="@dimen/espacio_mediano"
                                    android:layout_marginEnd="@dimen/espacio_mediano"
                                    android:lines="1"
                                    android:singleLine="true"
                                    android:text="Ingresos Fijos"
                                    android:textStyle="bold|italic"
                                    android:textColor="@color/primary_text"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                                    android:textSize="@dimen/size_titulo_item_transaccion"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/espacio_mediano"
                                    android:layout_marginTop="@dimen/espacio_small"
                                    android:layout_marginEnd="@dimen/espacio_mediano"
                                    android:textStyle="italic"
                                    android:textColor="@color/secondary_text"
                                    android:text="18 Monday June"
                                    android:lines="1"
                                    android:singleLine="true"/>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_cantidad_ingresos_fijos"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="100"
                                android:textStyle="bold"
                                android:textColor="@color/color_numeros_naranja"
                                android:gravity="right"
                                android:layout_marginEnd="@dimen/espacio_mediano"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/espacio_big"
                android:layout_marginEnd="@dimen/espacio_big"
                android:layout_marginTop="@dimen/espacio_small"
                android:layout_marginBottom="@dimen/espacio_mediano"
                app:cardCornerRadius="7dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:id="@+id/panel_gastos_fijos"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:background="@drawable/selector_item"
                    android:clickable="true">

                    <TextView
                        android:layout_width="@dimen/size_circularview"
                        android:layout_height="@dimen/size_circularview"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/espacio_mediano"
                        android:layout_marginEnd="@dimen/espacio_mediano"
                        android:background="@drawable/textview_circular"
                        android:backgroundTint="@color/color_numeros_naranja"
                        android:text="T"
                        android:textAlignment="center"
                        android:textColor="@color/background_white"
                        android:textSize="@dimen/text_circularview" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginEnd="@dimen/espacio_small"
                        android:divider="@color/primary_light"
                        android:showDividers="middle">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="@dimen/size_contenedor_info"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/espacio_mediano"
                                    android:layout_marginTop="@dimen/espacio_mediano"
                                    android:layout_marginEnd="@dimen/espacio_mediano"
                                    android:lines="1"
                                    android:singleLine="true"
                                    android:text="Gastos Fijos"
                                    android:textStyle="bold|italic"
                                    android:textColor="@color/primary_text"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                                    android:textSize="@dimen/size_titulo_item_transaccion"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/espacio_mediano"
                                    android:layout_marginTop="@dimen/espacio_small"
                                    android:layout_marginEnd="@dimen/espacio_mediano"
                                    android:textStyle="italic"
                                    android:textColor="@color/secondary_text"
                                    android:text="18 Monday June"
                                    android:lines="1"
                                    android:singleLine="true"/>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_cantidad_gastos_fijos"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="100"
                                android:textStyle="bold"
                                android:textColor="@color/color_numeros_naranja"
                                android:gravity="right"
                                android:layout_marginEnd="@dimen/espacio_mediano"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/espacio_big"
                android:layout_marginEnd="@dimen/espacio_big"
                android:layout_marginTop="@dimen/espacio_small"
                android:layout_marginBottom="@dimen/espacio_small"
                app:cardCornerRadius="7dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:id="@+id/panel_plantillas"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:background="@drawable/selector_item"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/transaccion_fija_icono"
                        android:layout_width="@dimen/size_circularview"
                        android:layout_height="@dimen/size_circularview"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/espacio_mediano"
                        android:layout_marginEnd="@dimen/espacio_mediano"
                        android:background="@drawable/textview_circular"
                        android:backgroundTint="@color/color_numeros_naranja"
                        android:text="T"
                        android:textAlignment="center"
                        android:textColor="@color/background_white"
                        android:textSize="@dimen/text_circularview" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginEnd="@dimen/espacio_small"
                        android:divider="@color/primary_light"
                        android:showDividers="middle">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="@dimen/size_contenedor_info"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/transaccion_fija_nombre"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/espacio_mediano"
                                    android:layout_marginTop="@dimen/espacio_mediano"
                                    android:layout_marginEnd="@dimen/espacio_mediano"
                                    android:lines="1"
                                    android:singleLine="true"
                                    android:text="Plantillas"
                                    android:textStyle="bold|italic"
                                    android:textColor="@color/primary_text"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                                    android:textSize="@dimen/size_titulo_item_transaccion"/>

                                <TextView
                                    android:id="@+id/transaccion_fija_info"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/espacio_mediano"
                                    android:layout_marginTop="@dimen/espacio_small"
                                    android:layout_marginEnd="@dimen/espacio_mediano"
                                    android:textStyle="italic"
                                    android:textColor="@color/secondary_text"
                                    android:text="18 Monday June"
                                    android:lines="1"
                                    android:singleLine="true"/>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_cantidad_plantillas"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="100"
                                android:textStyle="bold"
                                android:textColor="@color/color_numeros_naranja"
                                android:gravity="right"
                                android:layout_marginEnd="@dimen/espacio_mediano"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>