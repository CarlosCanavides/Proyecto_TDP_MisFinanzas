<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/contenedor_NameInfo"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/idImagen"
            android:layout_width="@dimen/size_circularview"
            android:layout_height="@dimen/size_circularview"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/espacio_mediano"
            android:layout_marginEnd="@dimen/espacio_mediano"
            android:background="@drawable/textview_circular"
            android:backgroundTint="@color/colorAccent"
            android:text="H"
            android:textAlignment="center"
            android:textColor="@color/background_white"
            android:textSize="@dimen/text_circularview" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginEnd="@dimen/espacio_small"
            android:divider="@color/primary_light"
            android:showDividers="middle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/size_contenedor_info"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/itemTransaccion_nombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/espacio_mediano"
                        android:layout_marginTop="@dimen/espacio_mediano"
                        android:layout_marginEnd="@dimen/espacio_mediano"
                        android:lines="1"
                        android:singleLine="true"
                        android:text="HOLAAAA"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                        android:textColor="@color/color_titulo_transaccion"
                        android:textSize="@dimen/size_titulo_item_transaccion" />

                    <TextView
                        android:id="@+id/itemTransaccion_categoria"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/espacio_mediano"
                        android:layout_marginTop="@dimen/espacio_small"
                        android:layout_marginEnd="@dimen/espacio_mediano"
                        android:textStyle="italic|bold"
                        android:lines="1"
                        android:singleLine="true"/>

                    <TextView
                        android:id="@+id/itemTransaccion_etiqueta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/style_textview_borde"
                        android:textColor="@color/white"
                        android:layout_marginStart="@dimen/espacio_mediano"
                        android:layout_marginTop="@dimen/espacio_small"
                        android:layout_marginEnd="@dimen/espacio_mediano"
                        android:lines="1"
                        android:singleLine="true"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/itemTransaccion_precio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="$100,00"
                    android:gravity="right"
                    android:layout_marginEnd="@dimen/espacio_mediano"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/primary_light">
            </View>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
