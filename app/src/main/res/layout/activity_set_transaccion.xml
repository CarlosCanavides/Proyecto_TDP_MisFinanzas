<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SetTransaccionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@id/set_contenedor_botones">

        <EditText
            android:id="@+id/set_campo_precio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10.0"
            android:textSize="40sp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/espacio_mediano"
            android:layout_marginEnd="@dimen/espacio_mediano"
            android:layout_marginTop="@dimen/espacio_mediano">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_categoria"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/set_campo_categoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_campos_transaccion"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/espacio_mediano"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/espacio_mediano"
            android:layout_marginEnd="@dimen/espacio_mediano">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_tipo_transaccion"
                android:layout_gravity="center_vertical"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/espacio_mediano">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal|center_vertical">

                    <RadioButton
                        android:id="@+id/radiobtn_setTransaccion_gasto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gasto"
                        android:textSize="@dimen/text_campos_transaccion"
                        android:layout_marginEnd="@dimen/espacio_big"/>

                    <RadioButton
                        android:id="@+id/radiobtn_setTransaccion_ingreso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ingreso"
                        android:textSize="@dimen/text_campos_transaccion"/>

                </RadioGroup>

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/espacio_mediano"
            android:layout_marginEnd="@dimen/espacio_mediano">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_titulo"
                android:layout_gravity="center_vertical"/>

            <EditText
                android:id="@+id/set_campo_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_campos_transaccion"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/espacio_mediano"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/espacio_mediano"
            android:layout_marginEnd="@dimen/espacio_mediano">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_etiqueta"
                android:layout_gravity="center_vertical"/>

            <EditText
                android:id="@+id/set_campo_etiqueta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_campos_transaccion"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/espacio_mediano"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/espacio_mediano"
            android:layout_marginEnd="@dimen/espacio_mediano">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_fecha"
                android:layout_gravity="center_vertical"/>

            <EditText
                android:id="@+id/set_campo_fecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_campos_transaccion"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/espacio_mediano"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/espacio_mediano"
            android:layout_marginEnd="@dimen/espacio_mediano">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_apunte"
                android:layout_gravity="center_vertical"/>

            <EditText
                android:id="@+id/set_campo_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_campos_transaccion"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/espacio_mediano"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/set_contenedor_botones">
        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:stretchColumns="0,1">
            <TableRow>
                <Button
                    android:id="@+id/btn_eliminar"
                    android:layout_height="wrap_content"
                    android:text="Eliminar"
                    android:textColor="@color/colorAccent"
                    android:background="@color/icons"/>
                <Button
                    android:id="@+id/btn_aceptar_set"
                    android:layout_height="wrap_content"
                    android:background="@color/icons"
                    android:text="Aceptar"
                    android:textColor="@color/colorAccent"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>

</RelativeLayout>